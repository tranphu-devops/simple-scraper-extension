{
  "manifest_version": 3,
  "name": "Simple Data Scraper",
  "version": "1.1.0",
  "description": "Chọn một vùng div trên website và lưu dữ liệu về server.",
  "permissions": ["storage", "activeTab", "scripting", "sidePanel"],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Simple Scraper"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
